{
  "name": "Test First Chrome Extension",
  "description": "Shows a menu item",
  "version": "0.0.1",
  "permissions": ["contextMenus", "activeTab"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://www.google.com/*", "*://www.youtube.com/*"],
      "js": ["index.js"]
    }
  ],
  "manifest_version": 2
}
